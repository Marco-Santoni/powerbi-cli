{
    "compilerOptions": {
        "allowJs": false,
        "alwaysStrict": true,
        "baseUrl": ".",
        "declaration": true,
        "declarationMap": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "inlineSources": true,
        "lib": ["es6", "dom"],
        "module": "CommonJS",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "outDir": "./bin/",
        "paths": { "*": ["types/*"] },
        "removeComments": true,
        "resolveJsonModule": false,
        "rootDir": "src",
        "sourceMap": true,
        "strict": true,
        "strictBindCallApply": true,
        "strictFunctionTypes": false,
        "strictNullChecks": true,
        "strictPropertyInitialization": false,
        "target": "es6"
    },
    "include": ["src/**/*.ts"],
    "exclude": ["src/**/*.spec.ts"],
    "ts-node": {
        "files": true,
        "ignore": []
    }
}
